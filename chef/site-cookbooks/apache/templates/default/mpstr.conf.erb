# api
<VirtualHost *:<%= node['apache']['port'] %>>
    ServerName <%= node['apache']['server']['api'] %>
    DocumentRoot <%= node['apache']['docroot']['api'] %>
    <Directory "<%= node['apache']['docroot']['api'] %>">
        AllowOverride All
        Allow from All
    </Directory>
</VirtualHost>

